    <script>

        getDataset()
        async function getDataset() {

            var res = await fetch('test.txt')
            var text = await res.text()
            var names = await text.split('\n')
            var list = await text.split('\n')
            
            var name= []
            for (var i = list.length-2; i > -1; i--) {
                document.getElementById("posts").innerHTML +=  '<p>' + list[i] + '<br/>' + '<button type="button" class="delete">Delete</button>' + '</p>' 
            }
            for (var i = 0; i < list.length - 1; i++) {
                name[i] = (names[i].substr(0 , (names[i].indexOf(':'))))
                document.getElementById("users").innerHTML += '<p>' + name[i]+ '<br/>' + '</p>' 
                
            }
        }
        
             

    </script>
    <script>
        var checkbox = document.querySelector('input[name=toggle]');
        checkbox.addEventListener('change', function () {
